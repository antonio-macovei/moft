{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form contact-form" id="contact_form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="clearfix">
        
        
        <div class="form-group">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="input-md round form-control" placeholder="Username" pattern=".{3,100}" />
        </div>
        
        <div class="form-group">
            <input type="password" id="password" name="_password" required="required" class="input-md round form-control" placeholder="Password" pattern=".{3,100}" />
        </div>
            
    </div>
    <div class="pt-10">
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="submit_btn btn btn-mod btn-medium btn-full btn-round" />
    </div>
    
</form>
