{% trans_default_domain 'FOSUserBundle' %}


{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    <div class="clearfix">
        <div class="form-group">
            {{ form_row(form.plainPassword.first, {'attr': {'class': 'input-md round form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.plainPassword.second, {'attr': {'class': 'input-md round form-control'}}) }}
        </div>
    </div>
    <div class="pt-10">
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="submit_btn btn btn-mod btn-medium btn-round btn-full" id="reg-btn" />
    </div>
{{ form_end(form) }}

