{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div>
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" class="input-md round form-control" />
    </div>
    <div class="pt-10">
            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="submit_btn btn btn-mod btn-medium btn-round btn-full" />
    </div>
</form>
