{% extends 'admin.html.twig' %}

{% block title %}M.O.F.T - Admin Panel{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <h3 class="title-5 m-b-35">Sponsor Management</h3>
            <div class="table-data__tool">
                <div class="table-data__tool-right">
                    <a href="{{ path('sponsor_new') }}" class="au-btn au-btn-icon au-btn--green au-btn--small">
                        <i class="zmdi zmdi-plus"></i>add sponsor</a>
                </div>
            </div>
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="table-responsive table-responsive-data2">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th width="25%">name</th>
                            <th>description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sponsor in sponsors %}
                            <tr class="tr-shadow">
                                <td>{% if sponsor.available %} <i class="zmdi zmdi-check-circle" style="color: #00e600"></i> {% else %} <i class="zmdi zmdi-minus-circle" style="color: #ff0000"></i> {% endif %} 
                                    &nbsp;&nbsp;{{ sponsor.name }}</td>
                                <td>{{ sponsor.description }}</td>
                                <td>
                                    <div class="table-data-feature">
                                        <a href="{{ path('sponsor_edit', {'sponsor_id': sponsor.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                            <i class="zmdi zmdi-edit"></i>
                                        </a>
                                         <a href="{{ path('sponsor_remove', {'sponsor_id': sponsor.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="zmdi zmdi-delete"></i>
                                        </a>
                                        <a href="{{ path('sponsor_switch', {'sponsor_id': sponsor.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Switch availability">
                                            <i class="zmdi zmdi-spinner"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <tr class="spacer"></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

