{% extends 'admin.html.twig' %}

{% block title %}M.O.F.T - Admin Panel{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>User</strong> Management
                </div>
                {{ form_start(form) }}
                    <div class="card-body card-block">
                        <div class="row form-group">
                            <div class="col col-md-3">
                                {{ form_label(form.username) }}
                            </div>
                            <div class="col-12 col-md-9">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                <span class="form-error">{{ form_errors(form.username) }}</span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">
                                {{ form_label(form.email) }}
                            </div>
                            <div class="col-12 col-md-9">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                <span class="form-error">{{ form_errors(form.email) }}</span>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">
                                {{ form_label(form.phone) }}
                            </div>
                            <div class="col-12 col-md-9">
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                <span class="form-error">{{ form_errors(form.phone) }}</span>
                            </div>
                        </div>
                        {% if new_user is defined %}
                            <div class="row form-group">
                                <div class="col col-md-3">
                                    {{ form_label(form.password) }}
                                </div>
                                <div class="col-12 col-md-9">
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                    <span class="form-error">{{ form_errors(form.password) }}</span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer clearfix">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-sm float-right'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}