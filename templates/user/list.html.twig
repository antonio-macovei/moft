{% extends 'admin.html.twig' %}

{% block title %}M.O.F.T - Admin Panel{% endblock %}

{% block header %}
<form class="form-header" action="" method="POST">
    <input class="au-input au-input--xl" type="text" name="search" placeholder="Search" />
    <button class="au-btn--submit" type="submit">
        <i class="zmdi zmdi-search"></i>
    </button>
</form>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <h3 class="title-5 m-b-35">User Management</h3>
            <div class="table-responsive table-responsive-data2">
                <table class="table table-data2">
                    <thead>
                        <tr>
                            <th>name</th>
                            <th>email</th>
                            <th>phone</th>
                            <th>university</th>
                            <th>faculty</th>
                            <th>student id</th>
                            <th>fb</th>
                            <th>options</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr class="tr-shadow">
                                <td>{{ user.firstName }} {{ user.lastName }}</td>
                                <td><span class="block-email">{{ user.email }}</span></td>
                                <td>{{ user.phone }}</td>
                                <td class="text-center">
                                    <a class="item" data-toggle="tooltip" data-placement="top" title="{{ user.university }}">
                                        <i class="zmdi zmdi-map"></i>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a class="item" data-toggle="tooltip" data-placement="top" title="{{ user.faculty }}">
                                        <i class="zmdi zmdi-map"></i>
                                    </a>
                                </td>
                                <td>{{ user.studentId }}</td>
                                <td>
                                    <a href="{{ user.facebook }}" class="item" data-toggle="tooltip" data-placement="top" title="Facebook">
                                        <i class="zmdi zmdi-facebook"></i>
                                    </a>
                                </td>
                                <td>
                                    <div class="table-data-feature">
                                        <a href="{{ path('blacklist_add', {'user_id': user.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Add to blacklist">
                                            <i class="zmdi zmdi-file-plus"></i>
                                        </a>
                                        <a href="{{ path('user_remove', {'user_id': user.id}) }}" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="zmdi zmdi-delete"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <tr class="spacer"></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

